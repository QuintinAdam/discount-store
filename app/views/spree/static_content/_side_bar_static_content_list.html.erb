<% if page.foreign_link.present? %>
  <%= link_to page.title, page.foreign_link, target: '_blank', ref: 'nofollow', class: 'list-group-item' %>
<% else %>
  <% page_uri = Rails.application.routes.named_routes[:spree].path.spec.to_s == '/' ? page.slug : Rails.application.routes.named_routes[:spree].path.spec.to_s + page.slug %>
  <%= link_to page.title, page_uri, class: "list-group-item #{'active' if (request.fullpath.gsub('//','/') == page_uri)}" %>
<% end %>
